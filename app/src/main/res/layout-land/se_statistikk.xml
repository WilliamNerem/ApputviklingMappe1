<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/overskriftStatistikk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/overskriftStatistikk"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:background="@drawable/button_border"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/statistikkTekstRiktig"
                android:text="@string/statistikkTekstRiktig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="120dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="35dp"
                android:layout_marginStart="95dp">
            </TextView>
            <TextView
                android:id="@+id/statistikkTekstFeil"
                android:text="@string/statistikkTekstFeil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="120dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="35dp"
                android:layout_marginStart="100dp">
            </TextView>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/statistikkRiktig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="5dp"
                android:layout_marginStart="145dp"
                />
            <TextView
                android:id="@+id/statistikkFeil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:gravity="center_horizontal"
                android:layout_marginHorizontal="5dp"
                android:layout_marginStart="200dp"
                />
        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/slettStatistikk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="150dp"
            android:background="@drawable/button_border"
            android:text="@string/slettStatistikk" />

    </LinearLayout>

</RelativeLayout>